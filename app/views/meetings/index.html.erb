

<div class="wrapper-calendar">
    <div class="container-calendar">

      <div class="add-recipe-container">

        <div>
          <p id="notice"><%= notice %></p>

          <h1>Your Meal Plan</h1>

          <table>
            <thead>
              <tr>
                <th>Name</th>
                <th>Start time</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @meetings.each do |meeting| %>
                <tr>
                  <td><%= meeting.name %></td>
                  <td><%= meeting.start_time %></td>
                  <td><%= link_to 'Show', meeting %></td>
                  <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
                  <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>

          <%= link_to 'New Meeting', new_meeting_path %>
        </div>

        <h4>All our recipes:</h4>
        <div class="recipes-selection">
          <% @recipes.each do |recipe| %>
          <div class="drag-drop">
            <p>
              <%= recipe.name %>
            </p>
          </div>
          <% end %>
        </div>

      </div>

      <div class="container-monthly-calendar">
        <div>
          <%= month_calendar start_time: :my_date, events: @meetings do |date, meetings| %>
            <div class="container-calendar">
              <%= date.day %>
            </div>
            <% meetings.each do |meeting| %>
              <div>
                <%= meeting.name %>
              </div>
            <% end %>
          <% end %>
        </div>

      </div>

    </div>


</div>


